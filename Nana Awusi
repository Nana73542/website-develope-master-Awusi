<script>
    // Dark mode toggle
    const toggle = document.getElementById('darkModeToggle');
    toggle.addEventListener('click', () => {
        document.body.classList.toggle('dark-mode');
        document.querySelector('main').classList.toggle('dark-mode');
        document.querySelector('header').classList.toggle('dark-mode');
        document.querySelectorAll('input, textarea').forEach(el=>el.classList.toggle('dark-mode'));
        document.querySelectorAll('.btn-upload').forEach(el=>el.classList.toggle('dark-mode'));
        document.querySelectorAll('.payment-info').forEach(el=>el.classList.toggle('dark-mode'));
        document.querySelectorAll('.success-msg').forEach(el=>el.classList.toggle('dark-mode'));
        document.querySelector('.contact-box').classList.toggle('dark-mode');
    });

    // Image preview + drag & drop
    const dropArea = document.getElementById('dropArea');
    const screenshotInput = document.getElementById('screenshotInput');
    const previewContainer = document.getElementById('previewContainer');

    function updatePreview(files){
        previewContainer.innerHTML = '';
        Array.from(files).forEach(file=>{
            if(file.size > 5*1024*1024){ alert("File "+file.name+" is too big. Max 5MB."); return; }
            if(!file.type.startsWith('image/')){ alert("File "+file.name+" is not an image."); return; }
            const img = document.createElement('img');
            img.src = URL.createObjectURL(file);
            img.style.maxWidth='150px';
            img.style.margin='5px';
            img.style.borderRadius='8px';
            img.style.boxShadow='0 4px 10px rgba(0,0,0,0.2)';
            previewContainer.appendChild(img);
        });
    }

    screenshotInput.addEventListener('change', ()=>updatePreview(screenshotInput.files));
    dropArea.addEventListener('dragover', e=>{ e.preventDefault(); dropArea.classList.add('hover'); });
    dropArea.addEventListener('dragleave', e=>{ e.preventDefault(); dropArea.classList.remove('hover'); });
    dropArea.addEventListener('drop', e=>{ 
        e.preventDefault(); 
        screenshotInput.files = e.dataTransfer.files;
        updatePreview(screenshotInput.files);
    });

    // Form submission
    const form = document.getElementById('paymentForm');
    const successMsg = document.getElementById('successMsg');
    const spinner = document.getElementById('spinner');

    form.addEventListener('submit', function(){
        spinner.style.display = 'block';
        setTimeout(()=>{
            spinner.style.display = 'none';
            successMsg.style.display = 'block';
            form.reset();
            previewContainer.innerHTML='';
            // Auto-hide success message
            setTimeout(()=>successMsg.style.display='none',5000);
        }, 800);
    });
</script>

